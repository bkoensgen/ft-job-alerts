############################################################
# Copy this file to .env (do not commit .env)
# Fill in your credentials and preferences.
############################################################

# --- Modes ---
# 1 = use local sample data, no network required
# 0 = call France Travail APIs (requires credentials)
FT_API_SIMULATE=1

# --- France Travail OAuth2 ---
FT_CLIENT_ID=
FT_CLIENT_SECRET=
# Token endpoint (verify with current docs)
FT_AUTH_URL=https://entreprise.francetravail.fr/connexion/oauth2/access_token?realm=/partenaire

# --- Offres d’emploi v2 ---
# Search endpoint (verify with current docs)
FT_OFFRES_SEARCH_URL=https://api.francetravail.io/partenaire/offresdemploi/v2/offres/search
# Detail endpoint (used when needed)
FT_OFFRES_DETAIL_URL=https://api.francetravail.io/partenaire/offresdemploi/v2/offres/{id}

# --- La Bonne Boîte (optional, stubbed) ---
LBB_API_URL=

# --- ROME 4.0 (optional, stubbed) ---
ROME_API_URL=

# --- Notifications ---
# If EMAIL_TO is set and SMTP_* configured, emails are sent.
# Otherwise, notifications are written to data/out and also printed.
EMAIL_TO=benjamin.koensgen@gmail.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_STARTTLS=1

# --- Default search preferences (optional; can override per CLI call) ---
DEFAULT_KEYWORDS=ros2,c++,vision
DEFAULT_DEPT=68
DEFAULT_RADIUS_KM=50

